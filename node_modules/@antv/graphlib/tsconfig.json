{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["ES2015", "ES2016"],
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "pretty": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["__tests__"]
}
